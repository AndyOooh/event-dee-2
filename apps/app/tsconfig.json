{
  "extends": "@repo/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "__components/*": ["components/*"],
      "__atoms/*": ["atoms/*"],
      "__firebase/*": ["firebase/*"],
      "__styles/*": ["styles/*"],
      "__utils/*": ["utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(public)/(auth)/signup/business/SignupBusinessRight/validation.ts"
  ],
  "exclude": ["node_modules"]
}
