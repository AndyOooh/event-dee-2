{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_FIREBASE_API_KEY",
    "NEXT_PUBLIC_EMULATORS_ON",
    "NEXT_PUBLIC_MAPS_API_KEY"
  ],
  "pipeline": {
    "lint": {},
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "start": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "emulators": {
      "env": ["FIRESTORE_EMULATOR_HOST"]
    },
    "typecheck": {
      "cache": false
    }
  }
}
