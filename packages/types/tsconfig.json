{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
